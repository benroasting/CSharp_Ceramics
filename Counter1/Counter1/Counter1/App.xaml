<?xml version="1.0" encoding="utf-8" ?>

<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Counter1.App">
    <Application.Resources>
        <Color x:Key="Primary">#6DAF89</Color>
        <Color x:Key="Secondary">#CEE4D7</Color>
        <Color x:Key="Tertiary">#1D8348</Color>

        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="{StaticResource Tertiary}" />

        </Style>
    </Application.Resources>

</Application>
