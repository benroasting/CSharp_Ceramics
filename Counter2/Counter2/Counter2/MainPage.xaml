<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Counter2.MainPage"
             >
    
    <StackLayout BackgroundColor="{StaticResource Background}" >
        <StackLayout BackgroundColor="{StaticResource Header}" Padding="48" />
        <StackLayout BackgroundColor="{StaticResource Secondary}" Padding="6"/>

        <Label
            FontAttributes="Bold"
            FontSize="32"
            HorizontalOptions="Center"
            Text="Simple Counter"
            TextColor="{StaticResource Header}"
            Margin="20"
            />
        <Button
            BackgroundColor="{StaticResource Secondary}"
            Clicked="AddToCounter"
            Text="Add to Counter"
            TextColor="{StaticResource Background}"
            FontAttributes="Bold"
            VerticalOptions="EndAndExpand"
            FontSize="Medium"/>
        <Button
            BackgroundColor="{StaticResource Header}"
            Margin="0,0,0,30"
            Clicked="SeeResult"
            Text="See Result"
            TextColor="{StaticResource Background}"
            FontAttributes="Bold"
            FontSize="Medium"
            />
    </StackLayout>

</ContentPage>

